<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.mybank.screens.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_rootFragment"
            app:destination="@id/rootFragment" />
    </fragment>
    <fragment
        android:id="@+id/dollarsFragment"
        android:name="com.example.mybank.screens.privatSreens.PrivatFragment"
        android:label="fragment_dollars"
        tools:layout="@layout/fragment_privat" />
    <fragment
        android:id="@+id/euroFragment"
        android:name="com.example.mybank.screens.monoSreens.MonoFragment"
        android:label="fragment_euro"
        tools:layout="@layout/fragment_mono" />
    <fragment
        android:id="@+id/rootFragment"
        android:name="com.example.mybank.screens.root.RootFragment"
        android:label="fragment_root"
        tools:layout="@layout/fragment_root" />
</navigation>