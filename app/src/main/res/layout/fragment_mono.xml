    <View
        android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/tvNameOfCurrencyDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="Українська гривня"
            android:textColor="@color/black"

            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCodOfCurrencyDetails" />

        <TextView
            android:id="@+id/tvCodOfCurrencyDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="UAH"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/buyDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="Купівля"
            android:textColor="@color/green"
            android:textSize="20sp"

            app:layout_constraintEnd_toEndOf="@+id/tvNameOfCurrencyDetails"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="@+id/tvNameOfCurrencyDetails"
            app:layout_constraintTop_toBottomOf="@+id/tvNameOfCurrencyDetails" />

        <TextView
            android:id="@+id/tvBuyDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="0.000"
            android:textColor="@color/green"
            android:textSize="20sp"

            app:layout_constraintBottom_toBottomOf="@+id/buyDetails"

            app:layout_constraintStart_toEndOf="@+id/buyDetails"
            app:layout_constraintTop_toTopOf="@+id/buyDetails"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/sellDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="Продаж"
            android:textColor="@color/red"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/buyDetails"
            app:layout_constraintTop_toBottomOf="@+id/buyDetails" />

        <TextView
            android:id="@+id/tvSellDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="0.000"
            android:textColor="@color/green"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/sellDetails"

            app:layout_constraintStart_toStartOf="@+id/tvBuyDetails"
            app:layout_constraintTop_toTopOf="@+id/sellDetails" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/tvNameOfCurrencyDetails2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="Українська гривня"
            android:textColor="@color/black"

            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCodOfCurrencyDetails2" />

        <TextView
            android:id="@+id/tvCodOfCurrencyDetails2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="UAH"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/buyDetails2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="Купівля"
            android:textColor="@color/green"
            android:textSize="20sp"

            app:layout_constraintEnd_toEndOf="@+id/tvNameOfCurrencyDetails2"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="@+id/tvNameOfCurrencyDetails2"
            app:layout_constraintTop_toBottomOf="@+id/tvNameOfCurrencyDetails2" />

        <TextView
            android:id="@+id/tvBuyDetails2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="0.000"
            android:textColor="@color/green"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/buyDetails2"
            app:layout_constraintStart_toEndOf="@+id/buyDetails2"
            app:layout_constraintTop_toTopOf="@+id/buyDetails2"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/sellDetails2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="Продаж"
            android:textColor="@color/red"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/buyDetails2"
            app:layout_constraintTop_toBottomOf="@+id/buyDetails2" />

        <TextView
            android:id="@+id/tvSellDetails2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sc_bold"
            android:text="0.000"
            android:textColor="@color/green"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/sellDetails2"
            app:layout_constraintStart_toStartOf="@+id/tvBuyDetails2"
            app:layout_constraintTop_toTopOf="@+id/sellDetails2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
